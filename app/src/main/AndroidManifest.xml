<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idn99.project.bakatdanminatanak">

    <application
        android:allowBackup="true"
        android:icon="@drawable/l2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.TesBakatKarakter"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/SoalTheme"/>
        <activity android:name=".activity.History"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            />
        <activity android:name=".activity.KeteranganBakat"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:parentActivityName=".activity.PengenalanBakat"/>

        <activity android:name=".activity.KeteranganKarakter"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:parentActivityName=".activity.PengenalanKarakter"/>

        <activity android:name=".activity.PengenalanKarakter"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:parentActivityName=".activity.PengenalanBakatKarakter"/>

        <activity android:name=".activity.PengenalanBakat"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:parentActivityName=".activity.PengenalanBakatKarakter"/>

        <activity android:name=".activity.PengenalanBakatKarakter"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme"
            android:parentActivityName=".activity.HalamanAwal"/>
        <activity
            android:name=".activity.SplashScreen"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Mulai"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".activity.About"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".activity.HalamanAwal"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />
        <activity
            android:name=".activity.Result"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme" />
    </application>

</manifest>