<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.About"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/biru_gelap"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:layout_marginTop="65dp"
            android:background="@color/white"
            android:paddingTop="60dp"
            android:id="@+id/rv_anggota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/pilihan"
            android:layout_margin="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelompok 6"
                android:textSize="30sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/gavabon"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kelas 06TPLM010"
                android:textSize="18sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/gavabon"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>

</ScrollView>