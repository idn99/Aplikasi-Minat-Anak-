<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HalamanAwal"
    android:orientation="vertical"
    android:background="@drawable/bg_home"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/home2"
        android:padding="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Analisa Bakat dan Karaker Anak"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/gavabon"
            android:textColor="@color/biru_gelap"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btn_mulai"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="mulai analisa"
            android:layout_gravity="center"
            android:background="@drawable/blue_dark_circle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_home_pen"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Infromasi"
            android:layout_gravity="center"
            android:background="@drawable/blue_dark_circle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_history"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="history"
            android:layout_gravity="center"
            android:background="@drawable/blue_dark_circle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_about"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="tentang aplikasi"
            android:layout_gravity="center"
            android:background="@drawable/blue_dark_circle"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</LinearLayout>